<div class="xwelcome row mt-2 mb-0">
<h5>Welcome back Tom!</h5>
</div>
<section class="row mb-2">
  <%= form_for :post, url: posts_path do |f| %>
    <%= f.text_area :message, rows: 4, placeholder: "What's on your mind...", :class => "xnew-post-text col-12" %>
    <div class="post coll-3">
    <%= f.submit "Post", :class => "xsave-post btn btn-primary btn-sm col-12" %>
    </div>
  <% end %>
</section>

<div class="container">
<% @posts.each do |post| %>
  <div class="card">
    <div class="card-header text-right text-muted">
      <%= get_time_ago(post.created_at) %> ago
    </div>
    <img src="..." class="card-img-top d-none" alt="...">
    <div class="card-body pb-0">
      <div class="card-text text-start"><%= post.message %></div>
    </div>
    <div class="card-footer text-end bg-white border-0">
      <%= form_for @like do |form| %>
        <%= form.hidden_field :post_id, :value => "#{post.id}" %>
        <%= form.hidden_field :user_id, :value => "1" %>
            <button type="submit" class="d-inline btn text-white btn-light btn-sm">üëç</button>
            <div class="d-inline px-2"> <%= post.likes_count %></div>
            <button type="submit" class="d-inline btn text-white btn-light btn-sm">üëé</button>
      <% end %>
    </div>


<%# add a class here tomorrow and edit the comment field %>
  <ul class="list-group list-group-flush border-0" style="border-top:0">
      <% @comments = Comment.where({post_id: post.id})
      @comments.each do |comment_object| %>
        <li class="list-group-item text-start">
        <%= comment_object['comment'] %> 
        </li>
      <% end %>
  </ul>
  <div class="card-body mt-0 pt-0 pb-0 text-end">
  <%= form_for :comment, url: comments_path do |f| %>
    
      <%= f.text_area :comment, required: true, placeholder: "comment on this..", class: "w-100" %> <br>
      <%= f.hidden_field :post_id, required: true, value:"#{post.id}" %> 
      <%= f.hidden_field :user_id, required: true, value:'1' %> 
    
      <%= f.submit "Add comment", :class => "xadd-comment btn text-white btn-primary btn-sm mb-2" %>
    
   
  <% end %>
  </div>
 
  </div>
  <hr>
<% end %>
</div>

